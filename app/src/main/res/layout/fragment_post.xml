<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.blog.PostFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/post_logo"
            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="9dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/post_timestamp"
            android:layout_marginBottom="5dp"
            android:text="Over 1 million pieces sold !!"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/post_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_title"
            android:layout_marginTop="1dp"
            android:text="News"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/post_shortdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_category"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:text="Since 1973 Strike Pro has continually evolved by paying particular attention to their five main criteria - Professionalism" />

        <TextView
            android:id="@+id/post_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/post_logo"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:text="18.03.2018"
            android:textSize="12sp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/post_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/post_logo"
            android:layout_alignEnd="@+id/post_logo"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:adjustViewBounds="false"
            android:clickable="true"
            android:cropToPadding="false"
            app:fabCustomSize="30dp"
            app:srcCompat="@android:drawable/ic_menu_share" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>